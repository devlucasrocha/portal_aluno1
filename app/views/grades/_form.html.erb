<%= form_with(model: grade, local: true) do |form| %>
  <% if grade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(grade.errors.count, "error") %> prohibited this grade from being saved:</h2>

      <ul>
      <% grade.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, class:"form-control", placeholder:"Name"%>
      </div>
    </div>
    
    <div class="form-group">
      <div class="field">
        <%= form.label :bim1 %>
        <%= form.number_field :bim1, min: 0, step:0.5, max: 10, class:"form-control", placeholder:"First grade" %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= form.label :bim2 %>
        <%= form.number_field :bim2, min: 0, step:0.5,max: 10, class:"form-control", placeholder:"Second grade" %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= form.label :bim3 %>
        <%= form.number_field :bim3, min: 0, step:0.5,max: 10, class:"form-control", placeholder:"Third grade" %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= form.label :bim4 %>
        <%= form.number_field :bim4, min: 0, step:0.5,max: 10, class:"form-control", placeholder:"Fourth grade" %>
      </div>
    </div>
    <div class="actions">
      <%= form.submit nil, class:"btn btn-primary" %>
    </div>
  </form>
<% end %>
<br>